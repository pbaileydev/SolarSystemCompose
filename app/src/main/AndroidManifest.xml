<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- This permits the user to access Camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--
This helps to check a specific feature in the phone's hardware,
        here it is OpenGlES version. Sceneform needs OpenGLES Version 3.0 or later
    -->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />
    <!--
Indicates that this app requires Google Play Services for AR.
        Limits app visibility in the Google Play Store to ARCore supported devices
    -->
    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SolarSystem"
        tools:targetApi="31">
        <activity
            android:name=".CreditsActivity"
            android:exported="false"
            android:label="@string/title_activity_credits"
            android:theme="@style/Theme.SolarSystem" />

        <meta-data
            android:name="com.google.ar.core"
            android:value="optional" />

        <activity
            android:name=".ArActivity"
            android:exported="false"
            android:label="@string/title_activity_ar"
            android:theme="@style/Theme.SolarSystem" />
        <activity
            android:name=".CassiniSplash"
            android:exported="true"
            android:label="@string/title_activity_cassini_splash"
            android:theme="@style/Theme.SolarSystem">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlanetDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_planet_details"
            android:theme="@style/Theme.SolarSystem" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SolarSystem" />
    </application>

</manifest>